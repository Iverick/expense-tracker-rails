<%= link_to "Back", root_path, class: "btn btn-sm btn-secondary" %>

<div class="d-flex justify-content-between my-2">
  <h4 class="mt-3"><%= @list.name %></h4>

  <% if current_user.id == @list.user_id %>
    <div class="d-flex h-50">
      <%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-sm btn-primary me-2" %>
      <%= button_to "Destroy this list", @list, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>
  <% end %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Amount</th>
      <th scope="col">Cost of Item</th>
      <th scope="col">Total Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each_with_index do |expense, index| %>
      <tr class="align-middle">
        <th scope="row"><%= index + 1 %></th>
        <td><%= expense.name %></td>
        <td><%= @category_names[expense.category_id-1] %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.cost %></td>
        <td><%= expense.total_cost %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <th scope="row">Total cost:</th>
      <td><%= @list.total_cost %></td>
    </tr>
  </tbody>
</table>

<% if current_user.id == @list.user_id %>
  <%= link_to "New expense", new_list_expense_path(@list.id), class: "btn btn-sm btn-primary mb-4" %>
<% end %>
