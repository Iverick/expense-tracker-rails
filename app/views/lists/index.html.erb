<h2 class="text-center my-2">Your Lists</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Total Cost</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each_with_index do |list, index| %>
      <tr class="align-middle">
        <th scope="row"><%= index + 1 %></th>
        <td><h5>
          <%= link_to(list) do %>
            <%= list.name %>
          <% end %>
        </h5></td>
        <td><%= list.total_cost %></td>
        <td class="col-1">
          <%= button_to "Delete", list, method: :delete, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New list", new_list_path, class: "btn btn-sm btn-success" %>
