<div class="modal fade" id=<%= "delete-expense-#{expense.id}-modal" %> tabindex="-1" role="dialog" aria-labelledby="delete-expense-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body my-2">
        <span class="fs-5 p-2">Do you want to delete this expense?</span>
      </div>
      <div class="modal-footer">
        <%= button_to "Delete", [@list, expense], method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</div>
