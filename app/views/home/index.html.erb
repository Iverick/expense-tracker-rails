<main class="container">
  <h2 class="text-center my-2">Stored Lists</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Total Cost</th>
        <th scope="col">Author</th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each_with_index do |list, index| %>
        <tr 
          class=<% if current_user.present? %>
            <%= current_user.id == list.user_id ? 'bg-warning' : '' %>
          <% end %>
        >
          <th scope="row"><%= index + 1 %></th>
          <td class="col-5">
            <%= link_to(list) do %>
              <%= list.name %>
            <% end %>
          </td>
          <td><%= list.total_cost %></td>
          <td class="col-3"><%= list.user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>